<%= form_for @idea do |f| %>

    <%= f.label :title%>
    <%= f.text_field :title, placeholder: 'title', class: "form-control input-sm" %><br />
    <%= f.label :description%><br />
    <%= f.text_area :description, placeholder: 'description',rows: 10  %><br />
    <%= f.label :planned_to%>
    <%= f.date_field :planned_to, placeholder: 'planned_to'%><br />
    <%= f.submit 'Gonder'%>

<%end%>